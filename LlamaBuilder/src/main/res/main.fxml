<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import org.tbee.javafx.scene.layout.fxml.*?>
<MigPane fx:controller="ai.arcblroth.boss.llama.ui.LlamaController" xmlns:fx="http://javafx.com/fxml" layout="ins 0 0 0 0, fill">
	
	<SplitPane orientation="vertical" MigPane.cc="grow, growprio 200, wmin 20%" styleClass="selector-pane">
		<MigPane fx:id="gameControl" MigPane.cc="grow" layout="fillx">
			<Button fx:id="restartGame" text="Restart Game" onAction="#handleRestartGame"></Button>
		</MigPane>
		<MigPane layout="wrap 1, fill, ins 0 0 0 0">
			<MigPane MigPane.cc="growx, dock north" layout="wrap 1, fill, gap 5 5 5 20">
				<Text text="Tiles"  />
				<TextField MigPane.cc="growx" />
			</MigPane>
			<MigPane fx:id="tiles" MigPane.cc="grow" layout="wrap 3, fillx" styleClass="selector-tile-pane">
			
			</MigPane>
		</MigPane>
	</SplitPane>

	<MigPane fx:id="levelRenderer" MigPane.cc="shrink" layout="fill, ins 0 0 0 0">

	</MigPane>
	
</MigPane>